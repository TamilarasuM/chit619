{
  "name": "chit-fund-manager",
  "version": "1.1.0",
  "description": "A Progressive Web App for managing chit funds with dynamic auction, commission management, and privacy-focused member experience",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:full": "concurrently \"npm run server\" \"npm run client\"",
    "backend": "nodemon backend/server.js",
    "frontend": "npm run dev --prefix frontend",
    "build": "echo 'Backend only - no build needed'",
    "render-build": "npm install",
    "test": "jest --coverage",
    "seed": "node backend/utils/seeder.js",
    "recalculate": "node backend/utils/recalculatePayments.js",
    "create-admin": "node backend/utils/createAdmin.js",
    "list-admins": "node backend/utils/createAdmin.js -l",
    "install:all": "npm install && cd frontend && npm install && cd ..",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules"
  },
  "keywords": [
    "chit-fund",
    "auction",
    "pwa",
    "financial-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "pdfkit": "^0.14.0",
    "socket.io": "^4.6.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
